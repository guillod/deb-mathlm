#! /bin/sh
# postinst script for mathlm
#
# see: dh_installdeb(1)

set -e

if [ "$1" = "purge" ] || [ "$1" = "disappear" ] ; then

    # Lock mathlm account.
	usermod -L -e 1 mathlm || true
	
    # Purge config directory
	rm -Rf /etc/mathlm
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
